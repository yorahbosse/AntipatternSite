{{>navbar}}

<div class="container mt-4">
    {{#each exercises}}
    
        <h2 class="text-center" > {{dataValues.Tittle}} </h2>
        <div class="row mx-md-n5 my-3">
            <div class="col px-md-5 "><div class="p-3 text-center" ><strong>ID:</strong> {{dataValues.ID}} </div></div>
            <div class="col px-md-5 "><div class="p-3 text-center" ><strong>Postado por: </strong>  </div></div>
        </div>
        <h4 class="text-center mb-4" >Enunciado</h4>
        <p> {{dataValues.Description}} </p>

        <div class="card w-25">
            <div class="card-body">
                <h5 class="card-title">Legenda</h5>
                <h6 class="text-center"><span class="p-2 rounded" style="background-color: var(--contrast-color); color: white;">(Numero)</span></h6>
            </div>
            <div class="container w-75 mb-4 mx-auto border rounded">
                <div class="row p-3">
                    <div class="col-sm "><span class="badge p-2" style="background-color: var(--contrast-color); color: white;">(Entrada)</span></div>
                    <div class="col-sm"><span class="badge p-2" style="background-color: var(--main-color); color: white;">?</span></div>
                </div>
            </div>
        </div>
        <hr class="my-5">
        {{else}}
    {{/each}}

</div>